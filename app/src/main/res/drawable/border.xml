<!-- res/drawable/bordered_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- Change to the desired background color -->

    <!-- Border Color and Width -->
    <stroke
        android:width="1dp"
        android:color="#628bcc" /> <!-- Change to the desired border color -->

    <!-- Corner Radius -->
    <corners android:radius="4dp" /> <!-- Change to the desired corner radius -->
</shape>
